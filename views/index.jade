doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Noiseless AMA

    link(rel='stylesheet', href='/styles/main.css')
    link(href='https://fonts.googleapis.com/css?family=Raleway:400,600,700', rel='stylesheet', type='text/css')
